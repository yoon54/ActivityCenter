@model LoginUser

<div class="col-sm-12">
    <h3>Login</h3>
</div>

<form action="/login" method="post">
    <div class="col-sm-12">
        <div class="form-group">
            <label>Email:</label>
            <span class = "text-danger" asp-validation-for="LoginEmail"></span>
            <input type="text" name="LoginEmail" class="form-control"  />
        </div>
    </div>
    <div class="col-sm-12">
        <div class="form-group">
            <label>Password:</label>
            <span class = "text-danger" asp-validation-for="LoginPassword"></span>
            <input type="password" name="LoginPassword" class="form-control" />
        </div>
    </div>
    <div class="col-sm-12">
        <input type="submit"  value="Login" class="btn btn-primary pull-right" />
    </div>
</form>